<div class="container-fluid">
    <div class="row pt-4 pr-2">
        <div class="col-lg-4 d-none d-lg-block"></div>

        <div class="col-lg-4 col-md-8 pl-4 pr-4 ">
            <div class="row pr-4">
                <div id="indexCarousel" class="carousel slide carousel-fade mx-auto" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/img/flyer_main.jpg" class="d-block w-100 rounded" style="width:300px;height:800px;">
                        </div>
                        @foreach (var item in imgArray)
                        {
                            string imgSrc = "/img/" + item;
                            <div class="carousel-item">
                                <img src="@imgSrc" class="d-block w-100 rounded" style="width:300px;height:800px;">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#indexCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#indexCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-2 d-none d-lg-block"></div>
        <div class="col-lg-2 col-md-4 div-gradient rounded">
            <div class="row">
                <h4 class="text-light pt-4 mx-auto">Upcoming events</h4>
            </div>
