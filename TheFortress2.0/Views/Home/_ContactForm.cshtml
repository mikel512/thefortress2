@model DataAccessLibrary.Models.MessageModel
<form asp-action="MessageAdmin" asp-controller="Home"
      data-ajax="true"
      data-ajax-success="sendMessageSuccess"
      data-ajax-failure="sendMessageFailure">
    <div class="row">
        <div class="col-12">
            <div id="contactAjax">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-light" asp-for="Sender"></label>
                    <input asp-for="Sender" class="form-control"/>
                    <span asp-validation-for="Sender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-light" asp-for="Subject"></label>
                    <input asp-for="Subject" class="form-control"/>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-light" asp-for="Message"></label>
                    <textarea rows="6" asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-2 pr-3">
        <div class="col-10"></div>
        <div class="col-2">
            <button href="#" type="submit" class="btn btn-primary ">Send</button>
        </div>
    </div>
</form>