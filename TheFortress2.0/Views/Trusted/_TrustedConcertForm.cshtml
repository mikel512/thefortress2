@model TheFortress.Models.InputHouseShow
<form>
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="text-light" asp-for="Artists"></label>
                <input asp-for="Artists" class="form-control"/>
                <span asp-validation-for="Artists" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="HouseName"></label>
                <input asp-for="HouseName" class="form-control"/>
                <span asp-validation-for="HouseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="Capacity"></label>
                <input asp-for="Capacity" class="form-control"/>
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="TimeStart"></label>
                <input asp-for="TimeStart" class="form-control"/>
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-light" asp-for="TimeEnd"></label>
                <input asp-for="TimeEnd" class="form-control"/>
                <span asp-validation-for="TimeEnd" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label class="text-light" asp-for="FlyerUrl"></label>
                <input asp-for="FlyerUrl" class="form-control" />
                <span asp-validation-for="FlyerUrl" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label class="text-light" asp-for="FlyerUrl"></label>
                <input asp-for="FlyerUrl" class="form-control" accept=".jpg, .jpeg"/>
                <span asp-validation-for="FlyerUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label class="text-light" asp-for="UserNotes"></label>
                <textarea asp-for="UserNotes" class="form-control"  rows="4"></textarea>
                <span asp-validation-for="UserNotes" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-9"></div>
        <div class="col-3">
            <button id="fileUploadButton" class="btn btn-primary text-nowrap">Add Date</button>
            <output form="uploadForm" name="result"></output>
        </div>
    </div>
</form>

