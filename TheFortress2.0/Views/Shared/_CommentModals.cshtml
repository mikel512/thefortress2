@model DataAccessLibrary.Models.CommentModel
<div class="modal fade" id="replyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Add a comment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddComment" asp-controller="Home"
                  id="replyForm"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-success="commentSuccess">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Content"></label>
                                <textarea rows="5" asp-for="Content" class="form-control"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @* Hidden fields *@
                <input asp-for="EventId" id="eventIdInput" value="" style="display: none"/>
                <input asp-for="ParentCommentId" id="parentIdInput" value="" style="display: none"/>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary"
                            onclick="">Add comment</button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="addCommentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Add a comment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddComment" asp-controller="Home"
                  id="newReply"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-success="commentSuccess">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Content"></label>
                                <textarea rows="5" asp-for="Content" class="form-control"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @* Hidden fields *@
                <input asp-for="EventId" id="eventIdInputNew" value="" style="display: none"/>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary"
                            onclick="">Add comment</button>
                </div>

            </form>
        </div>
    </div>
</div>