@using DataAccessLibrary.Models
@{
    var showList = (List<HouseShow>) ViewData["Shows"];
    Layout = "_AdminLayout";
}
@if (showList.Count == 0)
{
    <div class="card card-primary">
        <div class="card-header border-transparent">
            <h3 class="card-title">Local Shows</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0" id="localConcertsTable">
                    <thead>
                    <tr>
                        <th>Show ID</th>
                        <th>Artists</th>
                        <th>Venue</th>
                        <th>Time Start</th>
                        <th>Time End</th>
                        <th>Flyer</th>
                        <th>Notes</th>
                        <th>Approval Status</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <a href="#addShowModal" data-toggle="modal" class="btn btn-sm btn-info float-left">Add a new date</a>
        </div>
        <!-- /.card-footer -->
    </div>
}
else
{
    @await Html.PartialAsync("_EventsTableFull", showList)
    ;
}