<div class="card card-primary">
    <div class="card-header border-transparent">
        <h3 class="card-title">Upcoming Local Shows</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0" id="localConcertsTable">
                <thead>
                    <tr>
                        <th>Concert ID</th>
                        <th>Artists</th>
                        <th>Time Start</th>
                        <th>Venue</th>
                        <th>Approval Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.LocalConcertId">
                            <td>@item.LocalConcertId</td>
                            <td>@item.Artists</td>
                            <td>@item.TimeStart</td>
                            <td>@item.VenueName</td>
                            @* TODO change isapproved to checkbox, update database onclick w/ ajax *@
                            <td>@item.IsApproved</td>
                            <td>
                                <form asp-action="DeleteConcertAjax" asp-controller="Admin"
                                      data-ajax="true"
                                      data-ajax-method="GET"
                                      asp-route-eventConcertId="@item.EventConcertId"
                                      asp-route-localConcertId="@item.LocalConcertId"
                                      data-ajax-success="deleteTableRowSuccess"
                                      data-ajax-failure="genericFailure">
                                   
                                    <button type="submit" class="btn badge-danger text-light" href="#">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <a href="#addConcertModal" data-toggle="modal" class="btn btn-sm btn-info float-left">Add a new date</a>
        <a asp-action="Concerts" asp-controller="Admin" class="btn btn-sm btn-secondary float-right">View All Concerts</a>
    </div>
    <!-- /.card-footer -->
</div>
